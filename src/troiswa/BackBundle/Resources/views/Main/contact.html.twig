{% extends "troiswaBackBundle::layout-admin.html.twig" %}

{% block h1 %}
    Contact
{% endblock h1 %}


{% block title %}
     Contact
{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">
        <i class="fa fa-envelope-o"></i> Contact
    </li>
{% endblock breadcrumb %}




{% block content %}
    {# form(formcontact) #}
    {# form_start(formContact) #}
        {# form_errors(formContact) #}

        {# form_row(formContact.firstname) #}



    {# form_end(formContact) #}

    {{  form_start(formContact) }}

        <div class="form-group">
            {{ form_label(formContact.firstname,"Prénom") }}
            {{ form_errors(formContact.firstname) }}
            {{ form_widget(formContact.firstname,{id:"firstname",attr:{class:"form-control",for:"prénom"}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.lastname,"Nom") }}
            {{ form_errors(formContact.lastname) }}
            {{ form_widget(formContact.lastname,{id:"lastname",attr:{class:"form-control"}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.subject,"Sujet") }}
            {{ form_errors(formContact.subject) }}
            {{ form_widget(formContact.subject,{id:"subject",attr:{class:"form-control"}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.email) }}
            {{ form_errors(formContact.email) }}
            {{ form_widget(formContact.email,{id:"email",attr:{class:"form-control"}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.content,"Description") }}
            {{ form_errors(formContact.content) }}
            {{ form_widget(formContact.content,{id:"content",attr:{class:"form-control"}}) }}
        </div>
        <div>
            {{ form_widget(formContact.send,{label:"Envoyer", id:"send",attr:{class:"btn btn-primary"}}) }}
        </div>

    {{ form_end(formContact) }}


{% endblock content %}

