{% extends "troiswaBackBundle::layout-admin.html.twig" %}

{% block h1 %}
    Category
{% endblock h1 %}


{% block title %}
    Category
{% endblock title %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">
        <i class="fa fa-birthday-cake"></i> Category
    </li>
{% endblock breadcrumb %}


{%block content %}

    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <h2>Toutes les categories <a href"{{ path('troiswa_back_addCategory') }}" class="btn btn-lg btn-info">Ajouter une categorie</a> </h2>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Position</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key,value in categories %}
                        <tr>
                            <td>{{ value.id }}</td>
                            <td>{{ value.title }}</td>
                            <td>{{ value.description }}</td>
                            <td>{{ value.position }}</td>
                            <td>
                                <a href="{{ path('troiswa_back_viewOneCategory',{idcat:value.id}) }}" class="btn btn btn-primary">Voir</a>
                                <a href="{{ path('troiswa_back_updateCategory',{idcat:value.id}) }}" class="btn btn btn-success">Editer</a>
                                <a href="{{ path('troiswa_back_deleteCategory',{idcat:value.id}) }}" class="btn btn btn-danger" {# onclick="return confirm('Etes-vous sur ?')" #} >Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{%endblock content %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset("assets/js/remove.js") }}"> </script>
{% endblock js %}